@model IEnumerable<BookReviewApp.Models.Review>

@{
    ViewBag.Title = "Ocenione książki";
}

<h2>Moje oceny</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayName("Autor")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Book.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @item.Book.Author.Name @item.Book.Author.Surname
        </td>
        <td>
            @Html.ActionLink("Edytuj ocenę", "Edit", new { BookId=item.BookId }) |
            @Html.ActionLink("Zobacz książkę", "Details","Books", new { id=item.BookId },null) 
            
        </td>
    </tr>
}

</table>
