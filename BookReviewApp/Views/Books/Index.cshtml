@model IEnumerable<BookReviewApp.Models.Book>

@{
    ViewBag.Title = "Spis książek";
}

<h2>Wszystkie książki</h2>

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
        <div class="col-xs-6 col-md-3 col-lg-2" style=" margin-top: 10px; ">
            <figure>
                <a href="/Books/Details/@item.BookId">
                    <img src="@item.Cover" style="width: 100%; height: auto;"/>
                </a>
                <figcaption style="text-align:center"><b>@item.Title</b><br />
                <a href="/Authors/Details/@item.AuthorId">
                    <u>@item.Author.Name @item.Author.Surname</u>
                </a>
                </figcaption>
            </figure>
        </div>
        }
    </div>
</div>
